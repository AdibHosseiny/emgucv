#!/usr/bin/env bash

if [[ $# -lt 1 ]]; then 
  BUILD_ARCH=-DMACOSX_DEPLOYMENT_TARGET=11.0
  VTK_OPTION=  
  OSX_SYSROOT_OPTION=-DCMAKE_OSX_SYSROOT:STRING="/Applications/Xcode-beta.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/" 
  CV_OPTIMIZATION=-DCV_DISABLE_OPTIMIZATION:BOOL=ON
  echo "Will build for default architecture"
else
  BUILD_ARCH=-DCMAKE_OSX_ARCHITECTURES="$1" 
  VTK_OPTION=-DVTK_DIR:STRING="$PWD/../../../vtk/build"
  CV_OPTIMIZATION= 
  echo "Will build for $1"
fi

cd "$(dirname "$0")"
cd ../..

cd vtk
mkdir -p build
cd build
cmake $BUILD_ARCH $OSX_SYSROOT_OPTION -DBUILD_TESTING:BOOL=OFF -DBUILD_SHARED_LIBS:BOOL=OFF -DCMAKE_BUILD_TYPE:BOOL=Release ../
make
cd ../..

cd platforms/osx
mkdir -p build
cd build
cmake $BUILD_ARCH $OSX_SYSROOT_OPTION $CV_OPTIMIZATION -DBUILD_PERF_TESTS=FALSE -DBUILD_TESTS:BOOL=FALSE -DBUILD_DOCS:BOOL=FALSE -DBUILD_JPEG:BOOL=TRUE -DBUILD_PNG:BOOL=TRUE -DBUILD_TIFF:BOOL=TRUE -DWITH_WEBP:BOOL=OFF -DWITH_IPP:BOOL=OFF -DBUILD_opencv_ts:BOOL=OFF -DBUILD_opencv_apps:BOOL=OFF -DWITH_CUDA:BOOL=OFF -DOPENCV_EXTRA_MODULES_PATH=../../../opencv_contrib/modules -DBUILD_SHARED_LIBS:BOOL=OFF $VTK_OPTION -DWITH_LAPACK:BOOL=OFF -DFT_WITH_HARFBUZZ:BOOL=TRUE -DHB_BUILD_TESTS:BOOL=FALSE ../../../
make

cd ..
